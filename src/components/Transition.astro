<style is:global>
	@keyframes fade-in {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes fade-out {
		from {
			opacity: 1;
		}
		to {
			opacity: 0;
		}
	}

	::view-transition-new(project-adidas-f50),
	::view-transition-new(project-lacoste),
	::view-transition-old(project-adidas-f50),
	::view-transition-old(project-lacoste) {
		animation: none;
		mix-blend-mode: normal;
		height: 100%;
		overflow: clip;
		z-index: 2;
	}

	::view-transition-group(project-adidas-f50),
	::view-transition-group(project-nike-cortez),
	::view-transition-group(project-pescanova),
	::view-transition-group(project-lacoste),
	::view-transition-group(project-nike-loopwheeler),
	::view-transition-group(project-morgan-stanley),
	::view-transition-group(project-paisa),
	::view-transition-group(project-coya-restaurant),
	::view-transition-group(project-nirvana),
	::view-transition-group(project-bodega-eduardo-garrido-winrry) {
		animation-delay: 250ms;
		animation-duration: 900ms;
	}

	::view-transition-new(project-adidas-f50),
	::view-transition-new(project-lacoste) {
		object-fit: cover;
	}
	::view-transition-old(project-adidas-f50),
	::view-transition-old(project-lacoste) {
		object-fit: contain;
	}

	::view-transition-new(root) {
		animation-delay: 400ms;
		animation-duration: 1000ms;
	}
</style>

<script is:inline>
	document.addEventListener("astro:page-load", () => {
		const projects = document.querySelectorAll(".project");

		projects.forEach((project) => {
			project.addEventListener("click", function () {
				projects.forEach((otherProject) => {
					otherProject.classList.add(
						"animate-out",
						"fade-out",
						"duration-1000",
					);
					otherProject.classList.remove("z-10");
				});

				project.classList.remove("animate-out", "fade-out", "duration-1000");
				project.classList.add("z-10");
			});
		});
	});
</script>
