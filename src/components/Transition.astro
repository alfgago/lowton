<script>
	import { $$ } from "@/consts/dom-selector";
	document.addEventListener("astro:page-load", () => {
		const projects = $$(".project");

		projects.forEach((project) => {
			project.addEventListener("click", function () {
				projects.forEach((otherProject) => {
					otherProject.classList.add(
						"animate-out",
						"fade-out",
						"duration-1000",
					);
					otherProject.classList.remove("z-10");
				});

				project.classList.remove("animate-out", "fade-out", "duration-1000");
				project.classList.add("z-10");
			});
		});
	});
</script>
