---
const { component } = Astro.props;

import type { Component } from "@/consts/projects";
---

<div class="flex flex-col gap-8">
	{
		component.map((c: Component) => (
			<div class="w-full">
				<img
					loading="lazy"
					decoding="async"
					width={c.image?.width || 1200}
					height={c.image?.height || 800}
					class:list={["w-full object-cover aspect-video"]}
					alt={`"${c.image?.alt}"`}
					src={c.image?.url || "/img/projects/project.webp"}
				/>
			</div>
		))
	}
</div>
