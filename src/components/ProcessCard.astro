---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<div
  class="w-1/2 py-8 px-16 border border-[var(--color-primary)] bg-[#0a0a0c]/50 data-cursor process"
>
  <div class="grid grid-cols-1 gap-4 place-content-center">
    <span
      class="text-white font-normal text-2xl sm:text-3xl md:text-5xl uppercase text-center"
      >{title}</span
    >
    <p class="text-white text-lg sm:text-xl md:text-2xl text-balance">{text}</p>
  </div>
</div>
