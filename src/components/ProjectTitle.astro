---
interface Props {
	title: string;
	description: string;
	client: string;
	year: number;
}
import { isEmpty } from "../lib/utils";
const { title, description, year, client } = Astro.props;
---

<section id="project-hero" class="px-8 lg:px-16 mt-8">
	<div
		class="flex flex-col gap-4 pb-8 border-b border-[var(--color-secondary)]">
		<div class="text-white font-medium text-sm md:text-base uppercase">
			<span class="mr-2">â€¢</span><span>Portfolio</span>
		</div>
		<h1
			class="text-white font-medium text-4xl sm:text-5xl md:text-7xl uppercase">
			{title}
		</h1>
	</div>
	<div class="flex flex-col sm:flex-row w-full mt-14 pb-10 gap-8 sm:gap-0">
		<div class="flex w-full sm:w-1/2">
			{
				!isEmpty(client) && (
					<div class="flex flex-col w-full sm:w-1/2 gap-2">
						<p class="text-white text-sm sm:text-base font-medium">Client</p>
						<p class="text-white text-sm sm:text-base font-normal">{client}</p>
					</div>
				)
			}
			{
				!isEmpty(year) && (
					<div class="flex flex-col w-full sm:w-1/2 gap-2">
						<p class="text-white text-sm sm:text-base font-medium">Year</p>
						<p class="text-white text-sm sm:text-base font-normal">{year}</p>
					</div>
				)
			}
		</div>

		{
			!isEmpty(description) && (
				<div class="w-full sm:w-1/2">
					<p class="text-white text-base font-normal">{description}</p>
				</div>
			)
		}
	</div>
</section>
