---
import CTAButton from "./CTAButton.astro";
---

<section id="contact" class="px-8 lg:px-16">
	<div class="flex flex-col py-24 border-t border-[var(--color-secondary)] gap-8 items-center">
			<span class="text-white text-base font-normal uppercase">
				Have a project in mind?
			</span>
			<h4 class="text-white font-medium text-4xl sm:text-5xl md:text-7xl uppercase">
				Let's work together
			</h4>
			<CTAButton url="/#contact" target="_self" text="Get in touch" />
	</div>
</section>