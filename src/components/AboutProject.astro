---
import CTAButton from "./CTAButton.astro";
import { hasContent, isEmpty } from "../lib/utils";

interface Props {
	client: string;
	industry: string;
	services: string[];
	about: string;
}

const { client, industry, services, about } = Astro.props;
---

<section id="about-project" class="px-8 lg:px-16 pb-8">
	<div
		class="text-white font-medium text-sm md:text-base uppercase py-8 border-t border-[var(--color-secondary)]">
		<span class="mr-2">â€¢</span>About the Project
	</div>
	<div class="flex flex-col sm:flex-row gap-8">
		<div class="w-full">
			{
				!isEmpty(about) && hasContent(about) && (
					<div
						class="text-white text-sm sm:text-base md:text-xl font-normal text-balance"
						set:html={about}
					/>
				)
			}
		</div>
		<div class="flex gap-16 sm:gap-4 md:gap-0 sm:justify-evenly sm:w-1/2">
			<div class="flex flex-col gap-8">
				{
					!isEmpty(client) && (
						<div class="flex flex-col gap-2">
							<p class="text-white text-sm sm:text-base font-medium">Client</p>
							<p class="text-[var(--color-secondary)] text-sm sm:text-base font-normal">
								{client}
							</p>
						</div>
					)
				}
				{
					services.length > 0 && (
						<div class="flex flex-col gap-2">
							<p class="text-white text-sm sm:text-base font-medium">
								Services
							</p>
							<ul>
								{services.map((service) => (
									<li class="text-[var(--color-secondary)] text-sm sm:text-base font-normal">
										{service}
									</li>
								))}
							</ul>
						</div>
					)
				}
				<!-- <CTAButton target="_self" url="#" text="Visit Website" />  -->
			</div>
			<div class="flex flex-col gap-8">
				{
					!isEmpty(industry) && (
						<div class="flex flex-col gap-2">
							<p class="text-white text-sm sm:text-base font-medium">
								Industry
							</p>
							<p class="text-[var(--color-secondary)] text-sm sm:text-base font-normal">
								{industry}
							</p>
						</div>
					)
				}
				<div class="flex flex-col gap-2">
					<p class="text-white text-sm sm:text-base font-medium">Duration</p>
					<p
						class="text-[var(--color-secondary)] text-sm sm:text-base font-normal">
						Duration
					</p>
				</div>
			</div>
		</div>
	</div>
</section>
